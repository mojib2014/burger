<div class="container bg">
	
	
	<!-- end .row -->
<div class="row">
	    <div class="center col-sm-12">

			<h2>Add A Burger!</h2>

			<form class="create-update-form" action="/" method="POST">

			  <div class="form-group">
			    <input type="text" id="ca" name="burger_name" placeholder="Please order your burger here">
			  </div>
			  
			  <button class="btn-primary" type="submit">Submit Order</button>
			</form>

	    </div>
	
  	</div>
		<div class="row">
	    <div class="center col-sm-12">
			{{!-- <img src="assets/img/burger1.png" alt="Eat-Da-Burger App"> --}}
	        <h1>Eat-Da-Burger App</h1>
	        <p></p>
	    </div>
  	</div>
	<div class="row">
	    <div class="col-sm-6">

			<br>
			<h2 class="readyToEate">Burgers Available To Eat!</h2>

			<ul>
			  {{#each burgers}}
			    {{#unless this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			        <form action="/{{this.id}}?_method=PUT" method="POST">
			          <input type="hidden" name="devoured" value="true">
			          <button class="btn-primary" type="submit">Devour It!</button>
			        </form>

			      </li>
			    {{/unless}}
			  {{/each}}
			</ul>

	    </div>

	    <div class="col-sm-6 eaten">

			<h2>Burgers That Have Been Eaten!</h2>
			
			  {{#each burgers}}
			    {{#if this.devoured}}
			      <li class="btnEaten">
			      	{{this.id}}
			        {{this.burger_name}}

			      </li>
			    {{/if}}
			  {{/each}}
			
	    </div>

  	</div>
	<!-- end .row -->

	
	<!-- end .row -->

</div>